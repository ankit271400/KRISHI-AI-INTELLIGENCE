import { Switch, Route } from "wouter";
import { queryClient } from "./lib/queryClient";
import { QueryClientProvider } from "@tanstack/react-query";
import { Toaster } from "@/components/ui/toaster";
import { TooltipProvider } from "@/components/ui/tooltip";
import Home from "@/pages/home";
import Dashboard from "@/pages/dashboard";
import VoiceAssistantPage from "@/pages/voice-assistant";
import PriceNegotiationPage from "@/pages/price-negotiation";
import USPPage from '@/pages/usp';
import WeatherPage from '@/pages/weather';
import TelegramBotPage from '@/pages/telegram-bot';
import ChainlinkPricesPage from '@/pages/chainlink-prices';
import StatesComparisonPage from '@/pages/states-comparison';
import SoilHealthPage from '@/pages/soil-health';
import FarmerQAPage from '@/pages/farmer-qa';

import NotFound from "@/pages/not-found";

function Router() {
  return (
    <Switch>
      <Route path="/" component={Home} />
      <Route path="/dashboard" component={Dashboard} />
      <Route path="/voice-assistant" component={VoiceAssistantPage} />
      <Route path="/usp" component={USPPage} />
      <Route path="/weather" component={WeatherPage} />
      <Route path="/telegram-bot" component={TelegramBotPage} />
      <Route path="/prices" component={ChainlinkPricesPage} />
      <Route path="/states" component={StatesComparisonPage} />
      <Route path="/soil-health" component={SoilHealthPage} />
      <Route path="/farmer-qa" component={FarmerQAPage} />
      <Route path="/price-negotiation" component={PriceNegotiationPage} />
      <Route component={NotFound} />
    </Switch>
  );
}

function App() {
  return (
    <QueryClientProvider client={queryClient}>
      <TooltipProvider>
        <Toaster />
        <Router />
      </TooltipProvider>
    </QueryClientProvider>
  );
}

export default App;
